@using BanchoMultiplayerBot.Host.Web.Models

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Add Player Ban
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="PlayerBan.Name" Label="Name" Required="true"/>
        <MudTextField @bind-Value="PlayerBan.Reason" Label="Reason" Required="false"/>
        <MudDatePicker @bind-Date="PlayerBan.Expire" Label="Expire"/>
        <MudTooltip Text="Wherever to only ban the player from being host, instead of all lobbies.">
            <MudCheckBox Class="mt-5" @bind-Checked="PlayerBan.HostBan" Label="Only host ban"/>
        </MudTooltip>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="OkButtonPressed">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public AddPlayerBan PlayerBan { get; set; } = null!;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void OkButtonPressed()
    {
        MudDialog.Close(DialogResult.Ok(PlayerBan));
    }

}